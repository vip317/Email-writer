{
  "name": "AI Email Assistant",
  "description": "AI-powered Gmail reply assistant using Spring Boot + Google Gemini",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage", "scripting", "notifications"],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://mail.google.com/*"
  ],
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://mail.google.com/*"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "AI Email Assistant",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
